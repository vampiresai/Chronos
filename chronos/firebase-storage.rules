rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can only access their own files
    match /users/{userId}/{allPaths=**} {
      // Allow read/write only if authenticated and matches the user ID
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Specific rules for capsule media
      match /capsules/{capsuleId}/{fileName} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null 
                     && request.auth.uid == userId
                     && request.resource.size < 10 * 1024 * 1024 // 10MB limit
                     && request.resource.contentType.matches('image/.*|video/.*|audio/.*');
      }
      
      // Temporary uploads folder
      match /temp/{fileName} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null 
                     && request.auth.uid == userId
                     && request.resource.size < 10 * 1024 * 1024; // 10MB limit
      }
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

